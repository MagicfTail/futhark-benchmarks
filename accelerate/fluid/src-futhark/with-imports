#!/usr/bin/env python3

import sys
import os.path
import re
import tempfile
import subprocess

def replace_imports(filename):
    with open(filename, 'r') as f:
        d = f.read()
    d = re.sub(r'^--!import +(.+?) *$',
               lambda m: replace_imports(m.group(1) + '.fut.module'),
               d,
               flags=re.MULTILINE)
    return d

def main():
    args = sys.argv[1:]
    program = args[0]
    filename_in = args[1]
    assert os.path.isfile(filename_in)

    new_text = replace_imports(filename_in)
    with tempfile.NamedTemporaryFile() as tf:
        with open(tf.name, 'w') as f:
            f.write(new_text)
        if program.startswith('futhark-'):
            filename_compiled = re.sub(r'\.fut\.wip$', '', filename_in)
            try:
                subprocess.check_call([program, '-o', filename_compiled, tf.name])
                return 0
            except subprocess.CalledProcessError:
                return 1
        elif program == 'futhark':
            try:
                subprocess.check_call(['futhark'] + args[2:] + [tf.name])
                return 0
            except subprocess.CalledProcessError:
                return 1

        else:
            print('error: wrong arguments', file=sys.stderr)
            return 1

if __name__ == '__main__':
    sys.exit(main())
